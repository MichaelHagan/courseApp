<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cgpaucc">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_book_red"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".HelpActivity"
            android:label="@string/help_title"
            android:parentActivityName=".SemesterSelection">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SemesterSelection" />
        </activity>

        <activity android:name=".SemesterSelection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SemesterPreview"
            android:parentActivityName=".SemesterSelection"
            android:theme="@style/SemPreviewTheme">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SemesterSelection" />

        </activity>


        <activity
            android:name=".EditorActivity"
            android:theme="@style/EditorTheme" />

        <provider
            android:name="data.gpaProvider"
            android:authorities="com.example.cgpaucc"
            android:exported="false" />
    </application>

</manifest>